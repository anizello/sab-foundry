<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'SAB.Name'}}</div>
    <div class='item-formula'>{{localize 'SAB.Item.damage'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create"}}'
        data-type='item'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='item'}}
      </a>
    </div>
  </li>
  {{#each gear as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        {{#if system.weight}}
          <h4>{{item.name}}</h4>
        {{else}}
          <h4><i>{{item.name}}</i></h4>
        {{/if}} 
      </div>
      {{#if item.system.roll.diceSize}}
        <div class='item-formula item-prop'>{{item.system.formula}}</div>
      {{else}}
        <div class='item-formula item-prop'></div>
      {{/if}}
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" }}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" }}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>