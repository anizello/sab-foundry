{{#if (eq actor.type "character")}}
    <!-- Origin -->
    <div class="character-origin">
        <span>
            <input
                type="text"
                name="system.attributes.origin.question"
                value="{{system.attributes.origin.question}}"
                class="section-input"
                readonly
            />
            <label for="system.attributes.origin.question" class="section-label">
                {{localize "SAB.character.origin"}}
            </label>
        </span>

        <span class="origin-answer-title">
            <input
                type="text"
                name="system.attributes.origin.answer.title"
                value="{{system.attributes.origin.answer.title}}"
                class="section-input"
                readonly
            />
            <label for="system.attributes.origin.answer.title" class="section-label">
                {{localize "SAB.character.sheet.origin.answer-title"}}
            </label>
        </span>

        {{#if system.attributes.origin.answer.description}}
            <span class="origin-answer-description">
                <p>{{system.attributes.origin.answer.description}}</p>
            </span>
        {{/if}}
    </div>
{{/if}}

<div class="abilities-container">
    <ol class="items-list">
          {{#each features as |item id|}}
            <li class='item' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-info'>
                        <a class='rollable' data-roll-type='item'>
                                {{#if item.system.roll.diceSize}}
                                    <i
                                        class="fa-solid fa-sword"
                                        title="{{item.name}}{{#if item.system.description}}: {{stripTags item.system.description}}{{/if}}"
                                    ></i>
                                {{else}}
                                    <i
                                        class="fa-solid fa-comments"
                                        title="{{item.name}}{{#if item.system.description}}: {{stripTags item.system.description}}{{/if}}"
                                    ></i>
                                {{/if}}
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>

                <div class="item-description">
                    {{#if (or item.system.roll.diceSize (gt item.system.armorValue 0))}}
                        <div class="item-armor-damage">
                            {{#if item.system.roll.diceSize}}
                                <span class="item-formula item-prop">{{item.system.formula}}</span>
                            {{/if}}
                            {{#if (gt item.system.armorValue 0)}}
                                <span class="item-prop">{{item.system.armorValue}} {{localize "SAB.character.armor.short"}}</span>
                            {{/if}}
                        </div>

                        {{#if item.system.description}}
                            <span class="description-divider"></span>
                        {{/if}}
                    {{/if}}

                    {{#if item.system.description}}
                        <p>{{handleLineBreaks item.system.description}}</p>
                    {{/if}}
                </div>

                <div class='item-controls'>
                    <a
                        class='item-control item-edit'
                        title='{{localize "DOCUMENT.edit" }}'
                        >
                        <i class='fas fa-edit'></i>
                    </a>
                    <a
                        class='item-control item-delete'
                        title='{{localize "DOCUMENT.delete" }}'
                    >
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
        {{/each}}
    </ol>
</div>

<!-- New Ability & Advancement -->
<div class="new-ability-container item-controls">
    {{#if (ne actor.type "opponent")}}
        <button type="button" class="item-create" data-type='feature'>
            <i class="fa-regular fa-plus"></i>
            {{localize "SAB.actions.new-ability"}}
        </button>
    {{/if}}

    {{#if (eq actor.type "opponent")}}
        <button type="button" class="item-create" data-type='feature'>
            <i class="fa-regular fa-plus"></i>
            {{localize "SAB.actions.add-new"}}
        </button>
    {{/if}}

    {{#if (eq actor.type "character")}}
        <button type="button" class="advance-character">
            <i class="fa-regular fa-angles-up"></i>
            {{localize "SAB.advance.button"}}
        </button>
    {{/if}}
</div>

