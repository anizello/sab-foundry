<!-- Origin -->
<div class="character-origin">
    <span>
        <input
            type="text"
            name="system.attributes.origin.question"
            value="{{system.attributes.origin.question}}"
            class="section-input"
            readonly
        />
        <label for="system.attributes.origin.question" class="section-label">
            {{localize "SAB.character.origin"}}
        </label>
    </span>

    <span class="origin-answer-title">
        <input
            type="text"
            name="system.attributes.origin.answer.title"
            value="{{system.attributes.origin.answer.title}}"
            class="section-input"
            readonly
        />
        <label for="system.attributes.origin.answer.title" class="section-label">
            {{localize "SAB.character.sheet.origin.answer-title"}}
        </label>
    </span>

    {{#if system.attributes.origin.answer.description}}
        <span class="origin-answer-description">
            <p>{{system.attributes.origin.answer.description}}</p>
        </span>
    {{/if}}
</div>

<div class="abilities-container">
    <ol class="items-list">
          {{#each features as |item id|}}
            <li class='item' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-info'>
                        <a class='rollable' data-roll-type='item'>
                            <i class="fa-solid fa-comments" title='{{item.name}}{{#if item.system.description}}: {{stripTags item.system.description}}{{/if}}'></i>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>

                {{#if item.system.description}}
                    <div class='item-description'>
                        <p>{{handleLineBreaks item.system.description}}</p>
                    </div>
                {{/if}}

                <div class='item-controls'>
                    <a
                        class='item-control item-edit'
                        title='{{localize "DOCUMENT.Edit" }}'
                        >
                        <i class='fas fa-edit'></i>
                    </a>
                    <a
                        class='item-control item-delete'
                        title='{{localize "DOCUMENT.Delete" }}'
                    >
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
        {{/each}}
    </ol>
</div>

<!-- New Ability -->
<div class="new-ability-container item-controls">
    <button type="button" class="item-create" data-type='feature'>
        <i class="fa-regular fa-plus"></i>
        {{localize "SAB.actions.new-ability"}}
    </button>
</div>
