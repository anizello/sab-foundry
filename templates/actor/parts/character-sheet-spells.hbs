<!-- Inventory -->
<div class="spells-container">
    <ol class="items-list">
          {{#each spells as |item id|}}
            <li class="item" data-item-id="{{item._id}}">
                <div class="item-name">
                    <div class="item-info">
                        <a class="rollable" data-roll-type="item">
                                <i
                                    class="fa-solid fa-comments"
                                    title="{{item.name}}{{#if item.system.description}}: {{stripTags item.system.description}}{{/if}}"
                                ></i>
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>

                {{#if item.system.description}}
                    <div class="item-description">
                        <p>{{handleLineBreaks item.system.description}}</p>
                    </div>
                {{/if}}

                <div class="item-controls">
                    <a
                        class="item-control item-roll rollable"
                        title='{{localize "DOCUMENT.Roll" }}'
                        data-roll-type='spell'
                    >
                        <i class='fas fa-dice-d6'></i>
                    </a>
                    <a
                        class="item-control item-edit"
                        title="{{localize "DOCUMENT.Edit" }}"
                    >
                        <i class="fas fa-edit"></i>
                    </a>
                    <a
                        class="item-control item-delete"
                        title="{{localize "DOCUMENT.Delete" }}"
                    >
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </li>
        {{/each}}
    </ol>
</div>

<!-- New Spell -->
<div class="new-item-container item-controls">
    <button type="button" class="item-create" data-type="spell">
        <i class="fa-regular fa-plus"></i>
        {{localize "SAB.actions.new-spell"}}
    </button>
</div>
