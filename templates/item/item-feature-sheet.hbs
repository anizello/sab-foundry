<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <div class="header-fields">
      <h1 class="charname">
        <input
          name="name"
          type="text"
          value="{{item.name}}"
          placeholder="{{localize "SAB.feature.sheet.name-placeholder"}}"
        />
      </h1>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <div class="resource item-info">
        <div>
            <label>{{localize "SAB.feature.sheet.type"}}</label>
            <select name="system.featureType" data-dtype="String">
                <option value="ability" {{#if (eq system.wefeatureTypeight "ability")}}selected{{/if}}>
                    {{localize "SAB.feature.sheet.ability"}}
                </option>

                <option value="attack" {{#if (eq system.featureType "attack")}}selected{{/if}}>
                    {{localize "SAB.feature.sheet.attack"}}
                </option>
            </select>
        </div>
    </div>

    <div>
        {{#if (eq system.featureType 'attack')}}
            <div class="resource item-info">
                <div>
                    <label>{{localize "SAB.item.sheet.die-size"}}</label>
                    <select name="system.roll.diceSize" data-dtype="String">
                        <option value="" {{#if (eq system.roll.diceSize "" )}}selected{{/if}}>
                            {{localize "SAB.item.sheet.die-size-placeholder"}}
                        </option>
                        <option value="d4" {{#if (eq system.roll.diceSize "d4" )}}selected{{/if}}>d4</option>
                        <option value="d6" {{#if (eq system.roll.diceSize "d6" )}}selected{{/if}}>d6</option>
                        <option value="d8" {{#if (eq system.roll.diceSize "d8" )}}selected{{/if}}>d8</option>
                        <option value="d10" {{#if (eq system.roll.diceSize "d10" )}}selected{{/if}}>d10</option>
                        <option value="d12" {{#if (eq system.roll.diceSize "d12" )}}selected{{/if}}>d12</option>
                    </select>
                </div>

                <div>
                    <label>{{localize "SAB.item.sheet.roll-modifier"}}</label>
                    <input
                        type="text"
                        class="dice-bonus"
                        name="system.roll.diceBonus"
                        value="{{#if system.roll.diceSize}}{{system.roll.diceBonus}}{{/if}}"
                        data-dtype="String"
                        {{#unless system.roll.diceSize}}
                            disabled
                        {{/unless}}
                        placeholder="{{localize 'SAB.item.sheet.dice-bonus-placeholder'}}"
                    />
                </div>
            </div>
        {{/if}}
    </div>

    <textarea
      name="system.description"
      rows="10"
      placeholder="{{localize "SAB.item.sheet.description-placeholder"}}"
    >{{system.description}}</textarea>
  </section>
</form>
